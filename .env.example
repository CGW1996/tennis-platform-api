# 服務器配置
PORT=8080
ENV=development

# 數據庫配置
DB_HOST=localhost
DB_PORT=5432
DB_NAME=tennis_platform
DB_USER=tennis_user
DB_PASSWORD=tennis_password
DB_SSL_MODE=disable

# Redis 配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Elasticsearch 配置
ELASTICSEARCH_URL=http://localhost:9200

# JWT 配置
JWT_SECRET=your-jwt-secret-key-change-in-production
JWT_ACCESS_TTL=15
JWT_REFRESH_TTL=7

# 文件上傳配置
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_EXTS=jpg,jpeg,png,gif,pdf
UPLOAD_PATH=./uploads# O
Auth 配置
# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URL=http://localhost:8080/api/v1/auth/oauth/google/callback

# Facebook OAuth
FACEBOOK_CLIENT_ID=your-facebook-client-id
FACEBOOK_CLIENT_SECRET=your-facebook-client-secret
FACEBOOK_REDIRECT_URL=http://localhost:8080/api/v1/auth/oauth/facebook/callback

# Apple OAuth
APPLE_CLIENT_ID=your-apple-client-id
APPLE_CLIENT_SECRET=your-apple-client-secret
APPLE_REDIRECT_URL=http://localhost:8080/api/v1/auth/oauth/apple/callback